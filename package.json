{
  "name": "ckb-urchin",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.6.1",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:testnet-server": "cd packages/ckb-graphql && npm run dev-server:testnet",
    "dev:codegen-resolver": "cd packages/ckb-graphql && npm run codegen -- --watch",
